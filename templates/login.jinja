<!-- 
    Login page, user is redirected here when the user clicks on Login.
-->

{% extends 'base.jinja' %}

{% block content %} 
    <h1>Login</h1>
    <p>Username</p>
    <input id="username"/>
    <p>Password</p>
    <input id="password"  type="password"/>
    <button onclick="login()">Login</button>

    <script>

        // basically checks if the server returns an Error message instead of a URL
        // this is a pretty terrible way of handling error generated by the server, but it works...
        function isValidURL(string) {
            if (string.length == 0) {
                return false;
            }
            if (string[0] == "/") {
                return true;
            }
            return false;
        }

        // login function to well login...
        async function login() {
            let loginURL = "{{ url_for('login_user') }}";

            let user_hash = await sha256($("#username").val(),$("#password").val());
            let secret_key = await sha256($("#password").val());
            localStorage.setItem("key", secret_key);
            console.log(user_hash);

            let res = await axios.post(loginURL, {
                username: $("#username").val(),
                password: $("#password").val(),
                user_hash: user_hash
            });

            if (!isValidURL(res.data)) {
                alert(res.data);
                return;
            }

            window.open(res.data, "_self")
        }
    </script>
{% endblock %}
